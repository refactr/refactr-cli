{
  "name": "@refactr/cli",
  "version": "1.0.0-alpha.1",
  "description": "Refactr CLI",
  "main": "dist/main.js",
  "author": "Refactr, Inc. (refactr.it)",
  "license": "MIT",
  "files": [
    "dist/refactrctl.js",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=12 <16"
  },
  "bin": {
    "refactrctl": "./bin/refactrctl.js"
  },
  "scripts": {
    "format": "prettier -w src/**/*.ts",
    "watch": "NODE_ENV=development BUILD_TARGET=runtime rollup -c -w src/main.ts",
    "build:runtime": "BUILD_TARGET=runtime rollup -c",
    "build:aot": "BUILD_TARGET=aot rollup -c && pkg dist/main.bundled.js -o dist/refactrctl -t node14-alpine,node14-linux-x64,node14-win-x64,node14-macos-x64",
    "test": "__REFACTR_COMMAND__=$(realpath ./bin/refactrctl.js) jest"
  },
  "dependencies": {
    "@refactr/api-client": "^0.4.0",
    "cli-table": "^0.3.4",
    "date-fns": "^2.16.1",
    "debug": "^4.3.1",
    "js-yaml": "^3.14.1",
    "jsonpath-plus": "^4.0.0",
    "lodash": "^4.17.20",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@jest/types": "^26.6.2",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/axios": "^0.14.0",
    "@types/cli-table": "^0.3.0",
    "@types/date-fns": "^2.6.0",
    "@types/debug": "^4.1.5",
    "@types/flat": "^5.0.1",
    "@types/jest": "^26.0.19",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.166",
    "@types/yargs": "^15.0.12",
    "jest": "^26.6.3",
    "pkg": "^4.4.9",
    "prettier": "^2.2.1",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
